						 <thead>
                            <tr align="center">
                               
								
								<th>libele</th>
								<th>Montant</th>
								
								
								
								
                            </tr>
                        </thead>
                       
						<tbody>
                            <tr t-foreach="o.autre_id"  t-as="rapport_ligne" align="left">
                              
                                <td><span t-field="rapport_ligne.produit_id.name"/></td>
                                <td><span t-field="rapport_ligne.montant"/></td>
                                
                                
                                
                               
                               
                            </tr>
                        </tbody>
						
                    </table> -->
					 

               
				

					
				
						
						
						
		            	


                           
					
					
                    

                </div>
            </t>
        </t>
    </t>
</template>


</odoo>
